<idea-plugin>
    <id>org.blacksoil.remotesync</id>
    <name>Remote Sync</name>
    <version>1.1.4</version>

    <vendor email="emeliangaiday@gmail.com" url="https://github.com/Ozsfag">BlackSoil</vendor>

    <!-- Краткое, однострочное описание -->
    <description><![CDATA[
    Upload and sync local Git changes to a remote server over SSH — no SFTP/FTP needed.
  ]]></description>

    <!-- Расширенные заметки о релизах -->
    <change-notes><![CDATA[
    <ul>
      <li><b>1.1.4</b> – Implemented Welсome page</li>
      <li><b>1.1.3</b> – Several small improvements</li>
      <li><b>1.1.2</b> – Improved CI</li>
      <li><b>1.1.1</b> – Improved configuration UI and SSH error feedback</li>
    </ul>
  ]]></change-notes>

    <!-- Зависимости -->
    <depends>com.intellij.modules.platform</depends>

    <!-- Расширения -->
    <extensions defaultExtensionNs="com.intellij">

        <fileEditorProvider implementation="org.blacksoil.remotesync.page.welcome.provider.WelcomeFileEditorProvider"/>

        <!-- Tool Window -->
        <toolWindow
                id="Remote Sync"
                anchor="bottom"
                factoryClass="org.blacksoil.remotesync.ui.factory.RemoteSyncToolWindowFactory"
                icon="/icons/icon.svg"/>

        <!-- Сервис хранения состояния -->
        <projectService
                serviceInterface="org.blacksoil.remotesync.ui.settings.RemoteSyncSettings"
                serviceImplementation="org.blacksoil.remotesync.ui.settings.RemoteSyncSettings"/>

    </extensions>

    <projectListeners>
        <listener
                class="org.blacksoil.remotesync.page.welcome.WelcomeProjectListener"
                topic="com.intellij.openapi.project.ProjectManagerListener"/>
    </projectListeners>
</idea-plugin>
