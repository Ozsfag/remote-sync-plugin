<idea-plugin>
    <id>org.blacksoil.remotesync</id>
    <name>Remote Sync</name>
    <version>1.1.1</version>
    <vendor email="emeliangaiday@gmail.com">BlackSoil</vendor>

    <description><![CDATA[
        Sync your Git changes to a remote server over SSH with ease.<br/>
        • Uploads new and modified files<br/>
        • Deletes removed files on the remote<br/>
        • Works directly from your Git working directory
    ]]></description>

    <change-notes><![CDATA[
        Initial release of Remote Sync plugin.
    ]]></change-notes>

    <idea-version since-build="223" until-build="241.*"/>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow id="Remote Sync"
                    anchor="bottom"
                    factoryClass="org.blacksoil.remotesync.factory.RemoteSyncToolWindowFactory"
                    icon="/icons/icon.svg"/>
        <projectService
                serviceInterface="org.blacksoil.remotesync.settings.RemoteSyncSettings"
                serviceImplementation="org.blacksoil.remotesync.settings.RemoteSyncSettings"/>
        <projectConfigurable
                instance="org.blacksoil.remotesync.settings.RemoteSyncSettingsConfigurable"
                id="org.blacksoil.remotesync.settings"
                displayName="Remote Sync"
                parentId="project"/>
    </extensions>
</idea-plugin>
